<div n:if="$flashes" n:foreach="$flashes as $flash"
        class="alert alert-{$flash->type} alert-dismissible fade show" role="alert">
    <i n:ifset="$flash->icon" class="fa fa-{$flash->icon} mr-2"></i>{$flash->message}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>