{block #content}
    {varType App\Model\Database\Entity\Offer $offer}

    <div class="page-header theme-bg-dark py-5 text-center position-relative">
        <div class="theme-bg-shapes-right"></div>
        <div class="theme-bg-shapes-left"></div>
        <div class="container">
            <h1 n:block="title" class="page-heading single-col-max mx-auto">Nabídka</h1>
            <div class="page-intro single-col-max mx-auto">Bublinové představení pro malé i velké</div>
        </div>
    </div>

    <div class="page-content py-5">
        <div class="container">
            <nav class="mb-5" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a n:href=":Front:Home:">Domů</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Nabídka</li>
                </ol>
            </nav>
            <div n:foreach="$offers as $offer" class="box">
                <div class="box-body">
                    <!-- Custom content-->
                    <div class="media align-items-lg-center flex-column flex-lg-row">
                        <div class="media-body">
                            <h5 class="mt-0 font-weight-bold mb-2">{$offer->getTitle()}</h5>
                            <p class="mb-3">{$offer->getDescription()}</p>
                            <div class="mt-0">
                                <a n:href=":Front:Offer:detail $offer->getId()">Více →</a>
                            </div>
                        </div>
                        <a n:href=":Front:Offer:detail $offer->getId()">
                            <img class="ml-lg-5 order-1 order-lg-2" src="{$basePath}{$offer->getImage()->getThumbWeb()}" alt="">
                        </a>
                    </div> <!-- End -->
                </div>
            </div>
        </div>
    </div>
{/}